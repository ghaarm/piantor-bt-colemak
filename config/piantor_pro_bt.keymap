#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/rgb.h>

// #include <dt-bindings/zmk/ext_power.h>
// https://joshinator.de/posts/zmk-combo-helper/

#define COMBO(NAME, BINDINGS, KEYPOS) \
  combo_##NAME { \
    timeout-ms = <750>; \
    bindings = <BINDINGS>; \
    key-positions = <KEYPOS>; \
    layers = <0>; \
  };

#define DEFAULT 0
#define LOWER 1
#define UPPER 2

&mt { tapping-term-ms = <125>; };
&lt { quick-tap-ms = <200>; };

/ {

    combos {
        compatible = "zmk,combos";
        // BEISPIEL: Positionen anpassen!
        // combo_cmd_del_to_ctrl_k {
        //   timeout-ms = <50>;                  // 30–60 ms ist üblich
        //   key-positions = <38 40>;  // <-- HIER deine Positionsnummern
        //   bindings = <&kp LC(K)>;             // Ausgabe: Ctrl+K
        //   // optional: nur auf bestimmten Layern aktivieren
        //   // layers = <0 1>; 
        // };
        // COMBO(lgui-enter, &kp LG(RET), 24 53 54) // shift enter + space
        // COMBO(shift-del-backspace, &kp BSPC, 24 52) // shift enter + space
        // COMBO(hyper-hash, &kp LG(LC(LA(LS(NON_US_HASH)))), 12 52 23) // shift enter + space
        // COMBO(hyper-rshift, &kp LG(LC(LA(LS(RIGHT_SHIFT)))), 12 52 35) // shift enter + space

    };

  // macros {
  //   repeat_macro: repeat_macro {
  //     compatible = "zmk,behavior-macro";
  //     label = "REPEAT_MACRO";
  //     #binding-cells = <0>;
  //     bindings = <&key_repeat>;
  //   };
  // };

  behaviors {
    del_gui_to_ctrlk: del_gui_to_ctrlk {
      compatible = "zmk,behavior-mod-morph";
      #binding-cells = <0>;
      // Tap normal: DEL; wenn GUI/Cmd gehalten: Ctrl+K
      bindings = <&kp DEL>, <&kp LC(K)>;
      mods = <(MOD_LGUI|MOD_RGUI)>;
    };
    tp_rep: tp_rep {
      compatible = "zmk,behavior-hold-tap";
      label = "tp_rep";
      #binding-cells = <2>; // for repeat mit layer 2 schreiben
      tapping-term-ms = <150>;
      quick-tap-ms = <0>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&key_repeat>;
    };
    morph_ae: morph_ae {
      compatible = "zmk,behavior-mod-morph";
      #binding-cells = <0>;
      bindings = <&kp A>, <&kp SQT>;

      // mods = <(MOD_LALT|MOD_RALT)>;
      mods = <(MOD_LALT)>;
    };

    morph_oe: morph_oe {
      compatible = "zmk,behavior-mod-morph";
      #binding-cells = <0>;
      bindings = <&kp O>, <&kp SEMICOLON>;

      mods = <(MOD_LALT)>;
    };

    morph_ue: morph_ue {
      compatible = "zmk,behavior-mod-morph";
      #binding-cells = <0>;
      bindings = <&kp U>, <&kp LEFT_BRACKET>;

      mods = <(MOD_LALT)>;
    };

    morph_ss: morph_ss {
      compatible = "zmk,behavior-mod-morph";
      #binding-cells = <0>;
      bindings = <&kp S>, <&kp MINUS>;

      mods = <(MOD_LALT)>;
    };


    tp: tap_preferred {
      compatible = "zmk,behavior-hold-tap";
      label = "TAP_PREFERRED";
      #binding-cells = <2>;
      tapping-term-ms = <175>;
      quick-tap-ms = <150>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    }; 
    ts: tap_slow {
      compatible = "zmk,behavior-hold-tap";
      label = "TAP_SLOW";
      #binding-cells = <2>;
      tapping-term-ms = <250>;
      quick-tap-ms = <200>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    }; 
  };


  

    keymap {
        compatible = "zmk,keymap";

        default_layer {
          display-name = "COLEMAK";
            // ------------------------------------------------------------------------------------------------------------
            // |  TAB  |  Q  |  W  |  F   |  R   |  B   |                   |  J   |  U    |  U    |  Y   |      |   #   |
            // | SHIFT |  A  |  R  |  S   |  T   |  G   |                   |  M   |  N    |  E    |  I   |   O   | SHIFT |
            // | CTRL  |  Z  |  X  |  C   |  D   |  V   |                   |  K   |  H    |  ,    |  .   |   -   |  |
            //                     | REP  | LOWER|  ENTER |                 | SPACE | RAISE| BSPC  |


            bindings = <
&tp LG(LC(RA(LEFT_SHIFT))) TAB    &kp Q                     &kp W    &kp F             &kp P         &kp B                    &kp J        &kp L         &morph_ue  &kp Z    &kp RIGHT_BRACKET                 &tp LG(LC(RA(LEFT_SHIFT))) NON_US_HASH
&mt LEFT_SHIFT ESCAPE             &morph_ae                 &kp R    &morph_ss         &kp T         &kp G                    &kp M        &kp N         &kp E      &kp I    &morph_oe                         &kp RIGHT_SHIFT
&kp LEFT_CONTROL                  &ts LC(LA(LEFT_SHIFT)) Y  &kp X    &kp C             &kp D         &kp V                    &kp K        &kp H         &kp COMMA  &kp DOT  &ts LC(LA(LEFT_SHIFT)) SLASH      &kp LEFT_CONTROL
                                                                     &tp_rep LALT 0    &lt 1 &del_gui_to_ctrlk     &tp LGUI ENTER           &tp LGUI SPC &lt 2 BSPC    &kp LALT    
            >;
        };

        lower_layer {
            // ------------------------------------------------------------------------------------------------------------
            // | BTCLR | BT1 | BT2 |  BT3 |  BT4 |  BT5 |                   |      |       |       |      |       |       |
            // |  F1   |  F2 |  F3 |  F4  |  F5  |  F6  |                   |  F7  |  F8   |  F9   |  F10 |  F11  |  F12  |
            // |   `   |  !  |  @  |  #   |  $   |  %   |                   |  ^   |  &    |  *    |  (   |   )   |   ~   |
            // |       |     |     |      |      |      |        |  |       |      |  _    |  +    |  {   |   }   |  "|"  |
            //                     |      |      |      |        |  |       |      |       |       |

// &kp NON_US_BSLH  &kp LS(NUMBER_1)  &kp LS(NUMBER_2)  &kp LS(NUMBER_3)  &kp DOLLAR        &kp PERCENT           &kp LS(N6)        &kp LS(N7)      &kp LS(N8)            &kp LS(N9)             &kp LS(N0)  &kp LS(MINUS) anscheiend sind bei zmk non_us_bslh und grave vertauscht

          display-name = "NUMBER";
            bindings = <
&kp GRAVE  &kp LS(NUMBER_1)  &kp LS(NUMBER_2)  &kp LS(NUMBER_3)  &kp DOLLAR        &kp PERCENT           &kp LS(N6)        &kp LS(N7)      &kp LS(N8)            &kp LS(N9)             &kp LS(N0)  &kp LS(MINUS)
&trans           &kp N1            &kp NUMBER_2      &kp N3            &kp N4            &kp N5                &kp NON_US_BSLH     &kp LS(LA(N7))  &kp LA(N8)            &kp LA(N9)             &kp RA(N0)  &kp EQUAL
&trans     &kp NUMBER_6      &kp N7            &kp N8            &kp KP_NUMBER_9   &kp N0                &kp LS(NON_US_BSLH)  &kp LA(N7)      &kp LS(LG(N8))        &kp LS(LG(N9))         &none       &kp PIPE
                                                     &trans            &trans            &trans                &trans            &trans          &trans

            >;
        };

        upper_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

              display-name = "FUNCTION";
            bindings = <
&bootloader   &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2     &kp LG(LS(N4))       &bt BT_CLR                          &kp LG(LEFT_ARROW)    &kp LG(DOWN_ARROW)  &kp LG(UP_ARROW)  &kp LG(RIGHT_ARROW)   &none         &bootloader
&trans        &none         &kp C_BRI_UP  &kp C_PREVIOUS   &kp C_NEXT           &kp C_PLAY_PAUSE               &kp LEFT_ARROW        &kp DOWN_ARROW      &kp UP_ARROW      &kp RIGHT_ARROW       &kp LA(HOME)  &trans
&none         &none         &kp C_BRI_DN  &kp C_VOL_DN     &kp C_VOL_UP         &kp C_MUTE                     &kp LA(LEFT_ARROW)    &kp PAGE_DOWN       &kp PAGE_UP       &kp LA(RIGHT_ARROW)   &none         &none    
                                          &trans           &trans            &trans                            &trans                &trans              &trans

            >;
        };
    };
};
